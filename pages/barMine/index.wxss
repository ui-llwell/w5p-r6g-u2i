/**index.wxss**/
page{
  height: 100%;
  background: #F2F2F2;
}
.userinfo {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
  align-items: center;
  background: #FAFAFC;
  height: 300rpx;
  margin-bottom: 10rpx;
}
.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  border-radius: 50%;
  overflow:hidden;
}
.userinfo-nickname {
  color: #333;
}
.weui_cell{
    position: relative;
    display: flex;
    padding: 10px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    margin-bottom: 10rpx;
    background: #fff;
}

.weui_cell::after{
  position: absolute;
  top: 35rpx;
  right: 26rpx;
  content: "";
     display: inline-block;
     height: 15rpx;
     width: 15rpx;
     border-width: 4rpx 4rpx 0 0;
     border-color: #C7C7CC;
     border-style: solid;
     transform: matrix(0.71,0.71,-0.71,0.71,0,0);
}
.weui_cell_hd{
  display: inline-block;
  width: 20px;
  margin-right: 5px;
}
.weui_cell_hd image{
  width: 100%;
  height: 20px;
  vertical-align: -2px;
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 34rpx;
  color: #000;
}
